#include <bits/stdc++.h>

using namespace std;

int main()
{
    int N;
    cin >> N;
    vector<int> v(N);
    int totalSum = 0; 
    for (int i = 0; i < N; i++)
    {
        cin >> v[i];
        totalSum += v[i];
    }

    int leftSum = 0; 
    int rightSum = 0; 
    for (int i = 0; i < N; i++)
    {   
        rightSum = totalSum - leftSum - v[i];
        if(leftSum == rightSum)
        {
            cout << i << endl;
            break;
        }
        else{
            leftSum += v[i];
        }
    }

    return 0;
}
